@using Asaal.Resources

@model IEnumerable<Asaal.Models.ApplicationUser>
@{
    ViewBag.Title = ViewsKeys.users;
}
<div class="users">

    <h2>@ViewsKeys.users</h2>
    <p class="lead">
        @ViewsKeys.discriptionOfUsers
    </p>

    <b>@Model.Count() @ViewsKeys.user</b>
    <hr />

    <div class="allUsers">

        @if (Model.Count() == 0)
        {
            <p class="lead">
                @ViewsKeys.sorryMsg
            </p>
        }

        <div class="row">

            @foreach (var user in Model)
            {
                <div class="col-sm-4">
                    <div class="user text-center">
                        <div class="thumbnail">
                            <a href="/ControlPanel/userAccount/@user.Id"></a>
                            <img src="@user.ProfileImgSrc" alt="...">
                            <div class="caption">
                                <h3>@user.FullName</h3>
                                <span class="country" data-countryCode="@user.CountryCode">@user.CountryCode</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</div>
