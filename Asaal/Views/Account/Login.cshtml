@using Asaal.Resources
 
@using Asaal.Models
@model LoginViewModel
@{
    ViewBag.Title = ViewsKeys.login;
}

<div class="login accountForm">
    <div class="container">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {

            <div class="formHead">
                <hr />
                <h3>@ViewsKeys.login</h3>
            </div>

            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = ViewsKeys.email })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = ViewsKeys.password })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-default siteBtn">@ViewsKeys.login</button>
            </div>

            <div class="form-group">
                <p>
                    <a href="/account/ForgotPassword">@ViewsKeys.forgotYourPassword</a>
                </p>
                <p>
                    @ViewsKeys.dontHaveAccount <a href="/account/Register">@ViewsKeys.registerHere</a>
                </p>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}