@using Asaal.Resources

@model Asaal.Models.ResetPasswordViewModel
@{
    ViewBag.Title = ViewsKeys.resetPassword;
}

<div class="resetPassword accountForm">
    <div class="container">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            <div class="formHead">
                <hr />
                <h3>@ViewsKeys.resetPassword</h3>
            </div>

            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = ViewsKeys.email })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = ViewsKeys.password })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = ViewsKeys.confirmPassword })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Code)
                <button type="submit" class="btn btn-default siteBtn">@ViewsKeys.resetPassword</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
